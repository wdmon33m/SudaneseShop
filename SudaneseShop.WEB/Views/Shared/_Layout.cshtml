<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sudanese Shop</title>
    <!-- box-icons link -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <!-- remix-icons link-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css">
    <!-- google fonts link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- AOS - Animate on scroll library link -->
    <!--https://github.com/michalsnik/aos-->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <!-- bootstrab -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <header>
        <!-- navbar -->
        <nav class="container-xxl navbar navbar-expand-md navbar-light p-2 p-sm-0">
            <!-- navbar brand / title -->
            <a class="navbar-brand" href="#intro">
                <span class="text-secondary fw-bold">
                    <i class="bi bi-shop"> Sudanese Shop</i>
                </span>
            </a>
            <!-- toggle button for mobile nav -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#main-nav" aria-controls="main-nav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- navbar links -->
            <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span class="badge bg-danger rounded-pill">New Arrival</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#reviews">
                            <span class="d-md-none">
                                <i class="bi bi-chat"></i> 
                       </span>
                            Reviews
                       </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#contact">
                            <span class="d-md-none">
                                <i class="bi bi-envelope-fill"></i> 
                           </span>
                            Contact
                           </a>
                    </li>
                    <li class="nav-item d-md-none">
                        <a class="nav-link"
                           href="#pricing">
                            <span>
                                <i class="bi bi-tag"></i> 
                           </span>
                            Pricing
                           </a>
                    </li>
                </ul>

            </div>
           
            <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
                <div class="nav-right">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ri-search-line"></i>
                        <span>
                            <input type="text" placeholder="  Search" class="rounded-pill d-md-none search-box">
                        </span>    
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ri-shopping-cart-line">
                                    <span class="badge bg-danger rounded-circle">3</span>
                        </i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ri-user-line"></i>
                        <span>
                            <label class="d-md-none search-box"> Profile</label>
                        </span>    
                        </a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
       
    </header>
   

    <main role="main" class="mt-md-3 mb-md-3 mb-sm-0">
        @RenderBody()
    </main>

    <!--footer-->
    <section class="footer">
        <div class="footer-box">
            <h3>Company</h3>
            <a href="#">About Us</a>
            <a href="#">Our Services</a>
            <a href="#">Privacy Policy</a>
        </div>

        <div class="footer-box">
            <h3>FAQ</h3>
            <a href="#">How it works</a>
            <a href="#">Delivery</a>
            <a href="#">Return Policy</a>
        </div>

        <div class="footer-box">
            <h3>FAQ</h3>
            <a href="#">How it works</a>
            <a href="#">Delivery</a>
            <a href="#">Return Policy</a>
        </div>

        <div class="footer-box">
            <h3>Social</h3>
            <div class="social">
                <a href="#"><i class="ri-facebook-fill"></i></a>
                <a href="#"><i class="ri-instagram-fill"></i></a>
                <a href="#"><i class="ri-twitter-fill"></i></a>
            </div>
        </div>
    </section>

    <!--copyright-->
    <div class="copyright">
        <div class="end-text">
            <p>&copy; 2024 Sudanese Shop. All rights reserved</p>
        </div>

        <div class="end-img">
            <img src="~/images/p.png" alt="">
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>

    <!-- bootstrab -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!--custom js link-->
    <script src="~/js/script.js"></script>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            offset: 300,
            duration: 1450
        });
    </script>
    <script>
        const tooltips = document.querySelectorAll(".tt");
        tooltips.forEach((t) => {
            new bootstrap.Tooltip(t);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
